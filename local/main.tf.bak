terraform {
  required_providers {
    docker = {
      source  = "kreuzwerker/docker"
      version = "2.16.0"
    }
  }
}

provider "docker" {}

# YCSB setup

resource "docker_image" "ubuntu" {
  name = "ubuntu:latest"
}

resource "docker_container" "ycsb" {
  image = docker_image.ubuntu.latest
  name  = "ycsb"
  #  ports {
  #    # ssh
  #    internal = 80
  #    external = 8000
  #  }
  command = [
    "tail",
    "-f",
    "/dev/null"
  ]
}
